{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		
		"strict": true,
		
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		
		"isolatedModules": true,
		"skipLibCheck": true,
		
		"sourceMap": true,
		"inlineSources": true,
		"removeComments": true,
		
		"outDir": "./public/scripts/"
	},
	"exclude": [
		"node_modules",
		"**/node_modules/*"
	],
	"include": [
		"*.ts"
	]
}