{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		
		"strict": true,
		
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		
		"isolatedModules": true,
		"skipLibCheck": true,
		
		"sourceMap": true,
		"inlineSources": true,
		"removeComments": true,
		
		"outDir": "/Users/anastasiatkachenko/Documents/GitHub/water.me-main/public"
	},
	"exclude": [
		"node_modules",
		"**/node_modules/*"
	],
	"include": [
		"*.ts"
	]
}